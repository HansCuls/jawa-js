{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "lib",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "types"]
}